        </Button>
        <Button Name="Video" HorizontalAlignment="Center" Margin="-600,0,0,70" VerticalAlignment="Bottom" Height="148" Width="206">
            <Image Source="Assets\OptionsVideo.png" Margin="-64,-41.4,-62.8,-40.4"/>
        </Button>
        <Button Name="Controls" HorizontalAlignment="Center" Margin="600,0,0,70" VerticalAlignment="Bottom" Height="148" Width="206">
            <Image Source="Assets\OptionsControls.png" Margin="-64,-41.4,-62.8,-40.4"/>
        </Button>
        <Button Name="Return" HorizontalAlignment="Center" Margin="-1100,0,0,0" VerticalAlignment="Top" Height="71" Width="104" Click="Options_Return">
            <Image Source="Assets\Return.png" Margin="-56.8,-28.4,-51.2,-26.6" />
